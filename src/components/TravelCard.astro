---
import type { Travel } from "@/data/travels";

type Props = Travel;

const { title, imageSrc, note, country } = Astro.props;

---

<>
{
    <div class="relative w-full h-40 bg-gray-200 rounded-lg overflow-hidden">
      <img
        src={imageSrc ?? '/public/default-travel-card.jpg'}
        alt={title}
        class="w-full h-full object-cover"
      />
      <div class="absolute bottom-2 left-2 text-white bg-black bg-opacity-40 rounded px-2 py-1">
        {title}
      </div>
    </div>

}
</>
