---
import { SEO } from "astro-seo";
import { AstroFont } from "astro-font";
import { SITE_URL } from "@/data/config";
import type { HeadTags } from "@/utils/types/HeadTags";

type Props = HeadTags;

const { title, description, image, noindex, og } = Astro.props;

const DEFAULT_TITLE_PAGE = "Shin's - internet space";
const DEFAULT_DESCRIPTION_PAGE = "A internet space for Shin.";
const DEFAULT_URL_SITE = SITE_URL;

const openGraph = {
  title: title || DEFAULT_TITLE_PAGE,
  type: og?.type || "website",
  image: image || "/opengraph-image.jpg",
  alt: og?.alt || DEFAULT_DESCRIPTION_PAGE,
  url: DEFAULT_URL_SITE,
  description: description || DEFAULT_DESCRIPTION_PAGE,
};

// JSON-LD structured data for your website
const jsonLdData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Shin Khant Maung",
  "url": SITE_URL,
  "logo": `${SITE_URL}/favicon.svg`,
  "sameAs": [
    "https://www.linkedin.com/in/shinkhantmaung",
    "https://github.com/shinkhantmaung",
    "https://twitter.com/shinkhantmaungs",
    "https://bsky.app/profile/shinkhantmaung.bsky.social"
  ]
};
---

<head>
  <SEO
    charset="UTF-8"
    title={title || DEFAULT_TITLE_PAGE}
    description={description || DEFAULT_DESCRIPTION_PAGE}
    noindex={noindex || false}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      creator: "@shinkhantmaungs",
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "sitemap", href: "/sitemap-index.xml" },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: Astro.generator },
        {
          name: "twitter:image",
          content: openGraph.image,
        },
        { name: "twitter:card", content: "summary_large_image" },
        { name: "twitter:title", content: openGraph.title },
        { name: "twitter:description", content: openGraph.description },
        { name: "twitter:site", content: "@itsstormzz_" },
      ],
    }}
  />
  <AstroFont
    config={[
      {
        src: [],
        preload: false,
        display: "swap",
        selector: "html",
        name: "Open Sans",
        fallback: "sans-serif",
        cssVariable: "font-open-sans",
        googleFontsURL:
          "https://fonts.googleapis.com/css2?family=Open+Sans&display=swap",
      },
    ]}
  />
    <script
    type="application/ld+json"
    set:html={JSON.stringify(jsonLdData)}
    />
</head>